<Window x:Class="ControlPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="控制面板工具" Height="620" Width="450"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="CanResize"
        Opacity="1.0"
        x:Name="MainWin">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="#4A90E2" 
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F4FD"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2E7CD6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D0E8F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#F0F0F0" 
            CornerRadius="10" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1"
            Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                   Background="#4A90E2" 
                   CornerRadius="10,10,0,0"
                   MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="控制面板工具" 
                              Foreground="White" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Margin="15,10"
                              VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <Button Content="—" 
                               Width="30" 
                               Height="30" 
                               Background="Transparent" 
                               Foreground="White" 
                               BorderThickness="0"
                               Padding="0"
                               Click="MinimizeButton_Click"
                               ToolTip="最小化"/>
                        <Button Content="✕" 
                               Width="30" 
                               Height="30" 
                               Background="Transparent" 
                               Foreground="White" 
                               BorderThickness="0"
                               Padding="0"
                               Click="CloseButton_Click"
                               ToolTip="关闭"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 主内容区域 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                <UniformGrid Columns="2" Margin="5">
                    <Button Content="显示" Click="BtnDesktop_Click"/>
                    <Button Content="声音" Click="BtnSound_Click"/>
                    <Button Content="高级防火墙" Click="BtnFirewall_Click"/>
                    <Button Content="程序和功能" Click="BtnAppwiz_Click"/>
                    <Button Content="电源选项" Click="BtnPowercfg_Click"/>
                    <Button Content="鼠标设置" Click="BtnMouse_Click"/>
                    <Button Content="设备管理器" Click="BtnDevice_Click"/>
                    <Button Content="区域" Click="BtnIntl_Click"/>
                    <Button Content="系统属性" Click="BtnSystemAttribute_Click"/>
                    <Button Content="日期和时间" Click="BtnDatetime_Click"/>
                    <Button Content="网络连接" Click="BtnNet_Click"/>
                    <Button Content="磁盘清理" Click="BtnDiskClearn_Click"/>
                    <Button Content="锁定计算机" Click="BtnLockComputer_Click"/>
                    <Button Content="计算机管理" Click="BtnComputerManagement_Click"/>
                    <Button Content="组件服务" Click="BtnGroupService_Click"/>
                    <Button Content="DirectX 诊断" Click="BtnDirectX_Click"/>
                    <Button Content="事件查看器" Click="BtnEventvwr_Click"/>
                    <Button Content="Internet 属性" Click="BtnInternetAttribute_Click"/>
                    <Button Content="系统信息" Click="BtnSystemInfo_Click"/>
                    <Button Content="远程桌面" Click="BtnRemoteDesktop_Click"/>
                    <Button Content="系统性能监控" Click="BtnWindowsFunction_Click"/>
                </UniformGrid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>

